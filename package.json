{
  "name": "talleres-santa-gema",
  "version": "9.1.0",
  "description": "Gesti√≥n contable y administrativa para Talleres Santa Gema",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.talleres.santagema",
    "productName": "Talleres Santa Gema",
    "files": [
      "app/**/*",
      "electron/**/*",
      "build/**/*",
      "backup_inicial.json",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}
